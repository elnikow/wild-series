{% extends 'base.html.twig' %}

{% block title %}Catégorie #{{ category.id }}{% endblock %}

{% block body %}
    <div class="media">
        <div class="media-body">
            <h1 class="mt-0">{{ category.name }}</h1>
            {% if programs %}
                {% for program in programs %}
                <h2>{{ program.id }} {{ program.title }}</h2>
                    <p>{{ program.summary }}</p>
                    <p><a href="{{ path("program_show", { id: program.id }) }}">Voir la fiche de la série</a></p>
                {% endfor %}
            {% else %}
                <p>Aucune série trouvée.</p>
            {% endif %}
        </div>
    </div>

    <a href="{{ path('category_index') }}">
        Retour à la liste des programmes
    </a>
{% endblock %}
